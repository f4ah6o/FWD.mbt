{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FWD Reason v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "reasonVersion",
    "code",
    "level",
    "target",
    "message"
  ],
  "properties": {
    "reasonVersion": {
      "type": "integer",
      "const": 1
    },
    "code": {
      "type": "string",
      "anyOf": [
        { "pattern": "^[A-Z0-9_]+$" },
        { "enum": ["RESERVED_WORD_CONFLICT"] }
      ]
    },
    "level": {
      "type": "string",
      "enum": ["error", "warn", "info"]
    },
    "target": {
      "type": "string",
      "enum": [
        "schema",
        "state",
        "transition",
        "rule",
        "effect",
        "baseline",
        "runtime"
      ]
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "hint": {
      "type": "string",
      "minLength": 1
    }
  }
}
